= form_for @shipment do |f|
  - if @shipment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@shipment.errors.count, "error")} prohibited this shipment from being saved:"
      %ul
        - @shipment.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label 'Please enter shipment weight (kg)'
    = f.number_field :kg
  .actions
    = f.submit 'Save', :class => 'button radius'
